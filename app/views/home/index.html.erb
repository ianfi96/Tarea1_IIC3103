

<section class="section">
  <div class="container">
    <div class="box">
      <div class="columns is-mobile is-centered">
        <h3 class="title is-3">Breaking Bad</h3>
      </div>
      <br>
      <div class="columns is-mobile is-centered">
        <%= form_tag("/season", method: "get") do %>
          <%= label_tag(:season, "Temporada: ", class: "title is-5") %>
          <%= hidden_field_tag :series, "Breaking Bad"%>
          <div class="select is-medium">
            <%= select_tag(:season, options_for_select(@bb_seasons)) %>
          </div>
          <%= submit_tag("Buscar", class: "button is-info is-medium") %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <div class="container">
    <div class="box">
      <div class="columns is-mobile is-centered">
        <h3 class="title is-3">Better Call Saul</h3>
      </div>
      <br>
      <div class="columns is-mobile is-centered">
        <%= form_tag("/season", method: "get") do %>
        <%= label_tag(:season, "Temporada: ", class: "title is-5") %>
        <%= hidden_field_tag :series, "Better Call Saul"%>
        <div class="select is-medium">
          <%= select_tag(:season, options_for_select(@bcs_seasons)) %>
        </div>
        <%= submit_tag("Buscar", class: "button is-info is-medium")%>
        <% end %>
      </div>
    </div>
  </div>
</section>



