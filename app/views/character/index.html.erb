<% if @list_of_characters.empty? == false%>
    <div class= "table-container">
        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                <% @list_of_characters.each do |ch| %>
                    <tr><td><%= link_to "#{ch["name"]}", "/character?character_name=#{ch["name"]}", class: "subtitle is-5"%></td></tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% else %>
    <div class="box">
        <h3 class="title is-3">No hay personajes con ese nombre, busque un nombre v√°lido</h3>
    </div>
<% end %>
